# Insurance Co-Pilot Environment Variables
# Copy this file to .env.local and fill in your values

# OpenAI Configuration (Required for voice processing)
OPENAI_API_KEY=your_openai_api_key_here

# Application Configuration
NEXT_PUBLIC_APP_NAME=Insurance Co-Pilot
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_COMPANY_NAME=Your Insurance Company
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Voice Recording Configuration
NEXT_PUBLIC_ENABLE_VOICE_RECORDING=true

# API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000/api
NEXT_PUBLIC_MAX_FILE_SIZE=10485760

# Speech API Configuration
NEXT_PUBLIC_SPEECH_API_ENABLED=true

# Analytics (Optional)
NEXT_PUBLIC_GA_TRACKING_ID=
VERCEL_ANALYTICS_ID=

# Security
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# Database (Optional - Currently using mock data)
DATABASE_URL=
REDIS_URL=

# External Services (Optional)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
SENDGRID_API_KEY=